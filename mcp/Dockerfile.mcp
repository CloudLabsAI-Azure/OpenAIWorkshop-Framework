# Use an official Python runtime as a parent image  
FROM python:3.12-slim  
  
# Set environment variables  
ENV PYTHONDONTWRITEBYTECODE 1  
ENV PYTHONUNBUFFERED 1  
  
# Set a working directory  
WORKDIR /app  
  
# Install dependencies with uv for faster resolution  
COPY requirements.txt pyproject.toml uv.lock /app/  
RUN pip install --no-cache-dir --upgrade pip uv \
	&& uv pip install --system -r requirements.txt  
  
# Copy the current directory contents into the container at /app  
COPY . /app/  
  
# Expose port 8000 for the MCP service  
EXPOSE 8000  
  
# Run the Flask app with the host set to 0.0.0.0  
CMD ["python", "mcp_service.py"]  